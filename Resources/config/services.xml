<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="cypress_git_elephant.binary.class">GitElephant\GitBinary</parameter>
        <parameter key="cypress_git_elephant.repository.class">GitElephant\Repository</parameter>
        <parameter key="cypress_git_elephant.repository.utilities.class">Cypress\GitElephantBundle\Util\RepositoryUtilities</parameter>
    </parameters>

    <services>
        <service id="cypress_git_elephant.git_binary"
                 class="%cypress_git_elephant.binary.class%"
                 public="false">
            <argument>%cypress_git_elephant.binary_path%</argument>
        </service>

        <service id="cypress_git_elephant.repository"
                class="%cypress_git_elephant.repository.class%">
            <argument>%cypress_git_elephant.repository_path%</argument>
            <argument type="service" id="cypress_git_elephant.git_binary" />
        </service>
        <service id="git_repository" alias="cypress_git_elephant.repository" />

        <service id="cypress_git_elephant.profiler_repository"
                class="%cypress_git_elephant.repository.class%">
            <argument>%cypress_git_elephant.profiler_repository_path%</argument>
            <argument type="service" id="cypress_git_elephant.git_binary" />
        </service>

        <service id="cypress_git_elephant.repository.utilities" class="%cypress_git_elephant.repository.utilities.class%">
            <argument type="service" id="cypress_git_elephant.repository" />
        </service>
        <service id="git_repository.utilities" alias="cypress_git_elephant.repository.utilities" />
        
        <service id="data_collector.git_data_collector" class="Cypress\GitElephantBundle\Collector\GitElephantDataCollector">
            <argument type="service" id="cypress_git_elephant.profiler_repository" />
            <tag name="data_collector" template="CypressGitElephantBundle:Collector:toolbar.html.twig" id="git_elephant" />
        </service>
    </services>
</container>
